---
import { projects } from '../data/projects';
import { t, type ActiveLang } from '../i18n';

interface Props {
    lang: ActiveLang;
}

const { lang } = Astro.props as Props;
---

<section id="projects" class="relative bg-brand-ink pb-16 pt-6">
    <div
        aria-hidden="true"
        class="pointer-events-none absolute inset-x-0 top-0 h-24 bg-gradient-to-b from-white/8 via-brand-royal/12 to-transparent"
    />
    <div class="mx-auto max-w-content px-4">
        <div class="mb-8 flex flex-col gap-3 md:flex-row md:items-end md:justify-between">
        <div>
            <p class="text-[0.7rem] font-semibold uppercase tracking-[0.24em] text-slate-400">
            {t(lang, 'hero_kicker')}
            </p>
            <h2 class="text-2xl font-semibold tracking-tight text-slate-50">
            {t(lang, 'section_projects_title')}
            </h2>
            <p class="mt-1 text-sm text-slate-400">
            {t(lang, 'section_projects_subtitle')}
            </p>
        </div>
        <div class="text-[0.7rem] text-slate-400">
            {t(lang, 'section_projects_meta').replace('{count}', projects.length.toString())}
        </div>
        </div>

        <div class="grid gap-6 lg:grid-cols-2">
            {projects.map((p) => (
                <article
                class="group relative flex flex-col overflow-hidden rounded-3xl border border-brand-royal/40 bg-brand-navy/85 shadow-soft transition hover:-translate-y-1 hover:border-brand-gold/70 hover:shadow-glow"
                >
                <div
                    aria-hidden="true"
                    class="pointer-events-none absolute inset-0 z-10 opacity-0 transition duration-500 group-hover:opacity-100"
                >
                    <div class="absolute inset-0 bg-gradient-to-br from-brand-gold/14 via-brand-royal/18 to-brand-cream/10 blur-2xl" />
                </div>

                {/* “screenshot” placeholder */}
                <div class="relative h-40 overflow-hidden bg-brand-ink">
                    <div
                    class="absolute inset-0 bg-[radial-gradient(circle_at_25%_28%,rgba(214,178,94,0.3),transparent_62%),_radial-gradient(circle_at_78%_26%,rgba(31,63,112,0.28),transparent_60%),_radial-gradient(circle_at_46%_82%,rgba(17,38,70,0.22),transparent_62%)] bg-[length:260%_260%] bg-[position:50%_50%] opacity-70 animate-shimmer"
                    />
                    <div
                    aria-hidden="true"
                    class="pointer-events-none absolute inset-3 z-0 overflow-hidden rounded-2xl border border-white/5 bg-slate-900/70"
                    style={`background-image: linear-gradient(to bottom, rgba(7, 11, 23, 0.78), rgba(7, 11, 23, 0.92)), url(${p.screenshot}); background-size: cover; background-position: top;`}
                    />
                    <div class="absolute inset-x-3 bottom-3 flex items-center justify-between rounded-xl bg-brand-ink/85 px-3 py-1.5 text-[0.7rem] text-slate-200 shadow-soft">
                    <span class="truncate">{p.tech.join(' · ')}</span>
                    <span class="rounded-full bg-brand-navy px-2 py-0.5 text-[0.65rem] text-slate-200">{p.year}</span>
                    </div>
                </div>

                <div class="flex flex-1 flex-col gap-3 p-4">
                    <div class="flex items-start justify-between gap-3">
                    <div class="space-y-1">
                        <div class="text-sm font-semibold text-slate-50">{p.name}</div>
                        <div class="inline-flex items-center rounded-full bg-brand-royal/30 px-2.5 py-0.5 text-[0.65rem] text-slate-100">
                        {p.type}
                        </div>
                    </div>
                    </div>

                    <p class="text-xs text-slate-200">{p.description[lang]}</p>

                    <div class="mt-auto flex items-center justify-between pt-1 text-[0.7rem] text-slate-300">
                    <div class="flex flex-wrap gap-1">
                        {p.tech.slice(0, 3).map((tag) => (
                        <span class="rounded-full bg-brand-navy px-2 py-0.5">{tag}</span>
                        ))}
                    </div>
                    <div class="flex gap-3 text-[0.7rem]">
                        {p.liveUrl && (
                        <a
                            href={p.liveUrl}
                            target="_blank"
                            rel="noreferrer"
                            class="text-brand-gold hover:text-amber-200"
                        >
                            Ver web
                        </a>
                        )}
                        {p.codeUrl && (
                        <a
                            href={p.codeUrl}
                            target="_blank"
                            rel="noreferrer"
                            class="text-slate-200 hover:text-slate-50"
                        >
                            Código
                        </a>
                        )}
                    </div>
                    </div>
                </div>
                </article>
            ))}
        </div>
    </div>
</section>
