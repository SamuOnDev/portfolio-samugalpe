---
import Nav from '../../components/Nav.astro';
import SEO from '../../components/SEO.astro';
import CookieBanner from '../../components/CookieBanner.astro';
import Footer from '../../components/Footer.astro';
import ProjectsGrid from '../../components/ProjectsGrid.astro';
import { t, LANGS, type ActiveLang, getAlternateLinks } from '../../i18n';

export function getStaticPaths() {
    return LANGS.map((lang) => ({ params: { lang } }));
}

const lang = Astro.params.lang as ActiveLang;
const pagePath = '/';
const alternates = getAlternateLinks(lang, pagePath);

const principles = [
    {
        title: 'Performance first',
        subtitle: 'Cargas ligeras y optimizadas para el usuario.',
        icon: 'rocket',
    },
    {
        title: 'Código limpio',
        subtitle: 'Bases legibles y sencillas de mantener.',
        icon: 'code',
    },
    {
        title: 'UX clara',
        subtitle: 'Interfaces sin distracciones ni confusiones.',
        icon: 'compass',
    },
    {
        title: 'SEO técnico básico',
        subtitle: 'Etiquetas, estructura y performance en orden.',
        icon: 'search',
    },
];

const principleIcons = {
    rocket: (
        <svg viewBox="0 0 24 24" class="h-5 w-5 text-brand-ink" aria-hidden="true">
            <path
                fill="currentColor"
                d="M5.5 19.5c.9-.28 1.63-.7 2.22-1.28l2.19-2.2c.18-.18.18-.46 0-.64l-2.29-2.3c-.18-.17-.46-.17-.64 0l-2.18 2.2C3.8 16.73 3.35 17.5 3 18.5c-.37 1.1-.5 2.03-.5 2.03s.93-.14 2-.53Zm11.49-3.92c.21-.72.01-1.54-.54-2.09l-2.94-2.94c-.55-.55-1.37-.75-2.09-.54l-1.2.35c-.23.07-.29.35-.12.52l5.02 5.02c.17.17.45.1.52-.12zm-.75-7.2a.38.38 0 0 1 .08-.41l1.33-1.34c.52-.51.89-.94 1.12-1.5c.12-.27-.12-.52-.4-.4c-.56.23-.99.6-1.5 1.12l-1.34 1.33a.38.38 0 0 1-.41.08c-.3-.13-.62.18-.49.48l.3.7c.1.26.41.34.61.14zM11 14c2.76 0 5-2.24 5-5c0-.82-.2-1.6-.55-2.29c-.08-.16.08-.35.25-.28c1.31.56 2.48 1.4 3.49 2.42l.55.55c.32.32.85.32 1.18 0c.32-.32.32-.85 0-1.18l-1.92-1.92C16.68 3.87 13.8 3 11 3L4.94 9.06c-1.17 1.17-1.97 2.65-2.31 4.26l-.6 2.75a.8.8 0 0 0 .94.94l2.75-.6c1.61-.34 3.09-1.14 4.26-2.31z"
            />
        </svg>
    ),
    code: (
        <svg viewBox="0 0 24 24" class="h-5 w-5 text-brand-ink" aria-hidden="true">
            <path
                fill="currentColor"
                d="M10.4 18.5a.75.75 0 0 1-.52-.94l3-10a.75.75 0 1 1 1.44.42l-3 10a.75.75 0 0 1-.92.52zm-4.75-2.7l-3-3a.75.75 0 0 1 0-1.06l3-3a.75.75 0 0 1 1.06 1.06L4.06 12l2.65 2.65a.75.75 0 1 1-1.06 1.06zm12.7 0l2.65-2.65l-2.65-2.65a.75.75 0 0 1 1.06-1.06l3 3a.75.75 0 0 1 0 1.06l-3 3a.75.75 0 1 1-1.06-1.06z"
            />
        </svg>
    ),
    compass: (
        <svg viewBox="0 0 24 24" class="h-5 w-5 text-brand-ink" aria-hidden="true">
            <path
                fill="currentColor"
                d="m13.8 13.8l-3.27-1.63a.5.5 0 0 1-.2-.2L8.7 8.7a.5.5 0 0 1 .67-.67l3.27 1.63a.5.5 0 0 1 .2.2l1.63 3.27a.5.5 0 0 1-.66.67ZM12 3a9 9 0 1 0 0 18a9 9 0 0 0 0-18Zm-7.5 9a7.5 7.5 0 1 1 15 0a7.5 7.5 0 0 1-15 0Z"
            />
        </svg>
    ),
    search: (
        <svg viewBox="0 0 24 24" class="h-5 w-5 text-brand-ink" aria-hidden="true">
            <path
                fill="currentColor"
                d="M10.5 4a6.5 6.5 0 1 0 4.1 11.58l3.41 3.41a.75.75 0 1 0 1.06-1.06l-3.41-3.41A6.5 6.5 0 0 0 10.5 4Zm-5 6.5a5 5 0 1 1 10 0a5 5 0 0 1-10 0Z"
            />
        </svg>
    ),
};
---

<!DOCTYPE html>
<html lang={lang} class="scroll-smooth">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <SEO
        lang={lang}
        titleKey="seo_home_title"
        descriptionKey="seo_home_description"
        path={`/${lang}/`}
        alternates={alternates}
        />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    </head>
    <body class="bg-brand-ink text-slate-50">
        <CookieBanner lang={lang} />
        <Nav lang={lang} path={pagePath} />

        <main>
        <!-- HERO -->
        <section
            id="top"
            class="bg-gradient-to-b from-brand-ink via-[#111218] to-[#0b0c10] pb-16 pt-10"
        >
            <div class="mx-auto grid max-w-content gap-8 px-4 md:grid-cols-[minmax(0,2fr)_minmax(0,1.2fr)] md:items-center">
            <div class="space-y-4">
                <p class="text-xs font-medium uppercase tracking-[0.25em] text-slate-300">
                {t(lang, 'hero_kicker')}
                </p>
                <h1 class="text-3xl font-semibold leading-tight tracking-tight md:text-4xl">
                {t(lang, 'hero_title')}
                </h1>
                <p class="max-w-xl text-sm text-slate-200">
                {t(lang, 'hero_subtitle')}
                </p>
                <div class="flex flex-wrap gap-3">
                <a
                    href="#projects"
                    class="inline-flex items-center justify-center rounded-full bg-gradient-to-r from-brand-gold via-amber-200 to-brand-cream px-5 py-2 text-sm font-semibold text-brand-ink shadow-soft hover:brightness-105"
                >
                    {t(lang, 'hero_primary')}
                </a>
                <a
                    href="#contact"
                    class="inline-flex items-center justify-center rounded-full border border-brand-royal/60 px-5 py-2 text-sm text-slate-100 hover:bg-brand-ink"
                >
                    {t(lang, 'hero_secondary')}
                </a>
                </div>
            </div>

            <aside
                class="rounded-2xl border border-brand-royal/45 bg-gradient-to-br from-brand-royal/20 via-brand-navy to-brand-ink/95 p-4 shadow-soft"
            >
                <h2 class="mb-3 text-sm font-semibold text-slate-100">
                {t(lang, 'hero_card_title')}
                </h2>
                <ul class="space-y-1.5 text-xs">
                <li class="flex justify-between gap-4 border-b border-dashed border-brand-royal/45 pb-1">
                    <span class="text-slate-300">
                    {t(lang, 'hero_card_experience_label')}
                    </span>
                    <span>{t(lang, 'hero_card_experience_value')}</span>
                </li>
                <li class="flex justify-between gap-4 border-b border-dashed border-brand-royal/45 pb-1">
                    <span class="text-slate-300">
                    {t(lang, 'hero_card_specialty_label')}
                    </span>
                    <span>{t(lang, 'hero_card_specialty_value')}</span>
                </li>
                <li class="flex justify-between gap-4 border-b border-dashed border-brand-royal/45 pb-1">
                    <span class="text-slate-300">
                    {t(lang, 'hero_card_location_label')}
                    </span>
                    <span>{t(lang, 'hero_card_location_value')}</span>
                </li>
                <li class="flex justify-between gap-4 pt-1">
                    <span class="text-slate-300">
                    {t(lang, 'hero_card_availability_label')}
                    </span>
                    <span>{t(lang, 'hero_card_availability_value')}</span>
                </li>
                </ul>
            </aside>
            </div>
        </section>

        <!-- PROYECTOS -->
        <ProjectsGrid lang={lang} />

        <!-- SOBRE MI -->
        <section id="about" class="bg-brand-ink py-16">
            <div class="mx-auto grid max-w-content gap-8 px-4 md:grid-cols-[minmax(0,2fr)_minmax(0,1.2fr)]">
            <div class="space-y-4">
                <h2 class="text-2xl font-semibold tracking-tight">
                {t(lang, 'section_about_title')}
                </h2>
                <p class="text-sm text-slate-200">
                {t(lang, 'section_about_p1')}
                </p>
                <p class="text-sm text-slate-200">
                {t(lang, 'section_about_p2')}
                </p>
            </div>
            <div class="grid gap-3 text-xs sm:grid-cols-2">
                {principles.map((principle) => (
                <div
                    class="group relative flex items-center gap-3 overflow-hidden rounded-full border border-brand-royal/45 bg-gradient-to-r from-brand-navy/90 via-brand-ink to-brand-navy/90 px-3 py-3 shadow-soft ring-1 ring-white/5 transition hover:-translate-y-0.5 hover:border-brand-gold/60"
                >
                    <div class="relative flex h-10 w-10 items-center justify-center rounded-full bg-gradient-to-br from-amber-200/80 via-brand-gold/70 to-brand-cream/70 text-brand-ink shadow-glow">
                    <span class="absolute inset-0 rounded-full bg-white/30 opacity-0 transition group-hover:opacity-30" />
                    {principle.icon && principleIcons[principle.icon]}
                    </div>
                    <div class="flex flex-col leading-tight">
                    <span class="text-sm font-semibold text-slate-50">{principle.title}</span>
                    <span class="text-[0.7rem] text-slate-300">{principle.subtitle}</span>
                    </div>
                </div>
                ))}
            </div>
            </div>
        </section>

        <!-- STACK -->
        <section id="stack" class="bg-brand-ink py-16">
            <div class="mx-auto max-w-content px-4">
            <div class="mb-8 space-y-2">
                <h2 class="text-2xl font-semibold tracking-tight">
                {t(lang, 'section_stack_title')}
                </h2>
                <p class="text-sm text-slate-300">
                {t(lang, 'section_stack_subtitle')}
                </p>
            </div>

            <div class="grid gap-4 md:grid-cols-3">
                <div class="rounded-2xl border border-brand-royal/40 bg-brand-navy/85 p-4">
                <h3 class="mb-2 text-sm font-semibold">
                    {t(lang, 'stack_frontend_title')}
                </h3>
                <ul class="list-disc space-y-1 pl-4 text-xs text-slate-200">
                    {t(lang, 'stack_frontend_items').split(';').map((item) => (
                    <li>{item}</li>
                    ))}
                </ul>
                </div>
                <div class="rounded-2xl border border-brand-royal/40 bg-brand-navy/85 p-4">
                <h3 class="mb-2 text-sm font-semibold">
                    {t(lang, 'stack_backend_title')}
                </h3>
                <ul class="list-disc space-y-1 pl-4 text-xs text-slate-200">
                    {t(lang, 'stack_backend_items').split(';').map((item) => (
                    <li>{item}</li>
                    ))}
                </ul>
                </div>
                <div class="rounded-2xl border border-brand-royal/40 bg-brand-navy/85 p-4">
                <h3 class="mb-2 text-sm font-semibold">
                    {t(lang, 'stack_infra_title')}
                </h3>
                <ul class="list-disc space-y-1 pl-4 text-xs text-slate-200">
                    {t(lang, 'stack_infra_items').split(';').map((item) => (
                    <li>{item}</li>
                    ))}
                </ul>
                </div>
            </div>
            </div>
        </section>

        <!-- CONTACTO -->
        <section
            id="contact"
            class="bg-gradient-to-t from-brand-ink via-brand-ink to-[#111218] py-16"
        >
            <div class="mx-auto grid max-w-content gap-8 px-4 md:grid-cols-2">
            <div class="space-y-4">
                <h2 class="text-2xl font-semibold tracking-tight">
                {t(lang, 'section_contact_title')}
                </h2>
                <p class="text-sm text-slate-200">
                {t(lang, 'section_contact_subtitle')}
                </p>
                <p class="text-sm text-slate-200">
                {t(lang, 'section_contact_intro1')}
                </p>
                <p class="text-sm text-slate-200">
                {t(lang, 'section_contact_intro2')}
                </p>
                <ul class="list-disc space-y-1 pl-4 text-xs text-slate-200">
                <li>{t(lang, 'section_contact_item1')}</li>
                <li>{t(lang, 'section_contact_item2')}</li>
                <li>{t(lang, 'section_contact_item3')}</li>
                </ul>
            </div>

            <form
                class="space-y-3 rounded-2xl border border-brand-royal/40 bg-brand-navy/90 p-4 text-xs"
                action="mailto:TU_EMAIL_AQUI"
                method="post"
                enctype="text/plain"
            >
                <div class="flex flex-col gap-1">
                <label class="text-slate-200" for="name">
                    {t(lang, 'contact_name_label')}
                </label>
                <input
                    id="name"
                    name="name"
                    type="text"
                    required
                    class="rounded-lg border border-brand-royal/40 bg-brand-ink px-3 py-2 text-xs text-slate-100 outline-none focus:border-brand-gold"
                />
                </div>
                <div class="flex flex-col gap-1">
                <label class="text-slate-200" for="email">
                    {t(lang, 'contact_email_label')}
                </label>
                <input
                    id="email"
                    name="email"
                    type="email"
                    required
                    class="rounded-lg border border-brand-royal/40 bg-brand-ink px-3 py-2 text-xs text-slate-100 outline-none focus:border-brand-gold"
                />
                </div>
                <div class="flex flex-col gap-1">
                <label class="text-slate-200" for="message">
                    {t(lang, 'contact_message_label')}
                </label>
                <textarea
                    id="message"
                    name="message"
                    rows="4"
                    required
                    class="resize-none rounded-lg border border-brand-royal/40 bg-brand-ink px-3 py-2 text-xs text-slate-100 outline-none focus:border-brand-gold"
                />
                </div>
                <button
                type="submit"
                class="inline-flex items-center justify-center rounded-full bg-gradient-to-r from-brand-gold via-amber-200 to-brand-cream px-5 py-2 text-xs font-semibold text-brand-ink shadow-soft hover:brightness-105"
                >
                {t(lang, 'contact_submit')}
                </button>
            </form>
            </div>
        </section>
        </main>

        <Footer lang={lang} />
    </body>
</html>
