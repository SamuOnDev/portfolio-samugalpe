---
import Nav from '../../../components/Nav.astro';
import SEO from '../../../components/SEO.astro';
import CookieBanner from '../../../components/CookieBanner.astro';
import { t, DEFAULT_LANG, type ActiveLang, getAlternateLinks } from '../../../i18n';

const { lang: paramLang } = Astro.params;
const lang = (paramLang as ActiveLang) ?? DEFAULT_LANG;
const path = '/legal/privacy';
const alternates = getAlternateLinks(lang, path);
---

<!DOCTYPE html>
<html lang={lang}>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <SEO
        lang={lang}
        titleKey="seo_privacy_title"
        descriptionKey="seo_privacy_description"
        path={`/${lang}${path}`}
        alternates={alternates}
        />
    </head>
    <body class="bg-slate-950 text-slate-50">
        <CookieBanner lang={lang} />
        <Nav lang={lang} path={path} />

        <main class="mx-auto max-w-content px-4 py-10 text-sm text-slate-200">
        <h1 class="mb-4 text-2xl font-semibold tracking-tight">
            {t(lang, 'privacy_page_title')}
        </h1>
        <p class="mb-4 text-sm text-slate-300">
            {t(lang, 'privacy_page_intro')}
        </p>
        <p class="text-xs text-slate-500">
            {t(lang, 'privacy_minimal_note')}
        </p>
        </main>
    </body>
</html>
