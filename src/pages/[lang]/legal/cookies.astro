---
import Nav from '../../../components/Nav.astro';
import SEO from '../../../components/SEO.astro';
import CookieBanner from '../../../components/CookieBanner.astro';
import { t, LANGS, type ActiveLang, getAlternateLinks } from '../../../i18n';

export function getStaticPaths() {
    return LANGS.map((lang) => ({ params: { lang } }));
}

const lang = Astro.params.lang as ActiveLang;
const path = '/legal/cookies';
const alternates = getAlternateLinks(lang, path);
---

<!DOCTYPE html>
<html lang={lang}>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <SEO
        lang={lang}
        titleKey="seo_cookies_title"
        descriptionKey="seo_cookies_description"
        path={`/${lang}${path}`}
        alternates={alternates}
        />
    </head>
    <body class="bg-slate-950 text-slate-50">
        <CookieBanner lang={lang} />
        <Nav lang={lang} path={path} />

        <main class="mx-auto max-w-content px-4 py-10 text-sm text-slate-200">
        <h1 class="mb-4 text-2xl font-semibold tracking-tight">
            {t(lang, 'cookies_page_title')}
        </h1>
        <p class="mb-6 text-sm text-slate-300">
            {t(lang, 'cookies_page_intro')}
        </p>

        <h2 class="mb-2 text-base font-semibold">
            {t(lang, 'cookies_categories_title')}
        </h2>
        <ul class="mb-6 list-disc space-y-2 pl-5 text-sm text-slate-300">
            <li>{t(lang, 'cookies_category_necessary')}</li>
            <li>{t(lang, 'cookies_category_analytics')}</li>
            <li>{t(lang, 'cookies_category_marketing')}</li>
        </ul>

        <p class="text-xs text-slate-500">
            Rellena esta página con el texto adaptado por tu asesoría para cumplir con RGPD y normativa
            ePrivacy.
        </p>
        </main>
    </body>
</html>
