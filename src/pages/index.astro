---
import Nav from '../components/Nav.astro';
import SEO from '../components/SEO.astro';
import CookieBanner from '../components/CookieBanner.astro';
import Footer from '../components/Footer.astro';
import ProjectsGrid from '../components/ProjectsGrid.astro';
import { t, DEFAULT_LANG, type ActiveLang, getAlternateLinks } from '../i18n';

const { lang: paramLang } = Astro.params;
const lang = (paramLang as ActiveLang) ?? DEFAULT_LANG;
const path = '/';
const alternates = getAlternateLinks(lang, path);

const principles = [
    {
        title: 'Performance first',
        subtitle: 'Cargas ligeras y optimizadas para el usuario.',
        icon: 'rocket',
    },
    {
        title: 'Código limpio',
        subtitle: 'Bases legibles y sencillas de mantener.',
        icon: 'code',
    },
    {
        title: 'UX clara',
        subtitle: 'Interfaces sin distracciones ni confusiones.',
        icon: 'compass',
    },
    {
        title: 'SEO técnico básico',
        subtitle: 'Etiquetas, estructura y performance en orden.',
        icon: 'search',
    },
];

const principleIcons = {
    rocket: (
        <svg viewBox="0 0 24 24" class="h-5 w-5 text-brand-ink" aria-hidden="true">
            <path
                fill="currentColor"
                d="M5.5 19.5c.9-.28 1.63-.7 2.22-1.28l2.19-2.2c.18-.18.18-.46 0-.64l-2.29-2.3c-.18-.17-.46-.17-.64 0l-2.18 2.2C3.8 16.73 3.35 17.5 3 18.5c-.37 1.1-.5 2.03-.5 2.03s.93-.14 2-.53Zm11.49-3.92c.21-.72.01-1.54-.54-2.09l-2.94-2.94c-.55-.55-1.37-.75-2.09-.54l-1.2.35c-.23.07-.29.35-.12.52l5.02 5.02c.17.17.45.1.52-.12zm-.75-7.2a.38.38 0 0 1 .08-.41l1.33-1.34c.52-.51.89-.94 1.12-1.5c.12-.27-.12-.52-.4-.4c-.56.23-.99.6-1.5 1.12l-1.34 1.33a.38.38 0 0 1-.41.08c-.3-.13-.62.18-.49.48l.3.7c.1.26.41.34.61.14zM11 14c2.76 0 5-2.24 5-5c0-.82-.2-1.6-.55-2.29c-.08-.16.08-.35.25-.28c1.31.56 2.48 1.4 3.49 2.42l.55.55c.32.32.85.32 1.18 0c.32-.32.32-.85 0-1.18l-1.92-1.92C16.68 3.87 13.8 3 11 3L4.94 9.06c-1.17 1.17-1.97 2.65-2.31 4.26l-.6 2.75a.8.8 0 0 0 .94.94l2.75-.6c1.61-.34 3.09-1.14 4.26-2.31z"
            />
        </svg>
    ),
    code: (
        <svg viewBox="0 0 24 24" class="h-5 w-5 text-brand-ink" aria-hidden="true">
            <path
                fill="currentColor"
                d="M10.4 18.5a.75.75 0 0 1-.52-.94l3-10a.75.75 0 1 1 1.44.42l-3 10a.75.75 0 0 1-.92.52zm-4.75-2.7l-3-3a.75.75 0 0 1 0-1.06l3-3a.75.75 0 0 1 1.06 1.06L4.06 12l2.65 2.65a.75.75 0 1 1-1.06 1.06zm12.7 0l2.65-2.65l-2.65-2.65a.75.75 0 0 1 1.06-1.06l3 3a.75.75 0 0 1 0 1.06l-3 3a.75.75 0 1 1-1.06-1.06z"
            />
        </svg>
    ),
    compass: (
        <svg viewBox="0 0 24 24" class="h-5 w-5 text-brand-ink" aria-hidden="true">
            <path
                fill="currentColor"
                d="m13.8 13.8l-3.27-1.63a.5.5 0 0 1-.2-.2L8.7 8.7a.5.5 0 0 1 .67-.67l3.27 1.63a.5.5 0 0 1 .2.2l1.63 3.27a.5.5 0 0 1-.66.67ZM12 3a9 9 0 1 0 0 18a9 9 0 0 0 0-18Zm-7.5 9a7.5 7.5 0 1 1 15 0a7.5 7.5 0 0 1-15 0Z"
            />
        </svg>
    ),
    search: (
        <svg viewBox="0 0 24 24" class="h-5 w-5 text-brand-ink" aria-hidden="true">
            <path
                fill="currentColor"
                d="M10.5 4a6.5 6.5 0 1 0 4.1 11.58l3.41 3.41a.75.75 0 1 0 1.06-1.06l-3.41-3.41A6.5 6.5 0 0 0 10.5 4Zm-5 6.5a5 5 0 1 1 10 0a5 5 0 0 1-10 0Z"
            />
        </svg>
    ),
};
---

<!DOCTYPE html>
<html lang={lang} class="scroll-smooth">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <SEO
        lang={lang}
        titleKey="seo_home_title"
        descriptionKey="seo_home_description"
        path={`/${lang}/`}
        alternates={alternates}
        />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    </head>
    <body class="bg-brand-ink text-slate-50 antialiased selection:bg-amber-200/25 selection:text-amber-50">
        <CookieBanner lang={lang} />
        <Nav lang={lang} path={path} />

        <main class="relative overflow-hidden">
        <div
            aria-hidden="true"
            class="pointer-events-none absolute inset-0 -z-10 bg-[radial-gradient(circle_at_20%_22%,rgba(214,178,94,0.18),transparent_32%),radial-gradient(circle_at_82%_0%,rgba(45,45,45,0.28),transparent_30%),radial-gradient(circle_at_50%_80%,rgba(20,20,24,0.22),transparent_38%)]"
        />
        <div
            aria-hidden="true"
            class="pointer-events-none absolute inset-0 -z-10 opacity-50 [background-image:linear-gradient(rgba(255,255,255,0.03)_1px,transparent_1px),linear-gradient(90deg,rgba(255,255,255,0.03)_1px,transparent_1px)] [background-size:120px_120px]"
        />
        <!-- HERO estilo template -->
        <section
            id="top"
            class="relative overflow-hidden bg-gradient-to-b from-brand-ink via-[#111218] to-[#0b0c10] pb-20 pt-16"
        >
            <!-- “blob” de fondo -->
            <div
            class="pointer-events-none absolute inset-x-0 top-[-200px] -z-10 flex justify-center opacity-40"
            >
            <div
                class="h-[420px] w-[420px] rounded-full bg-gradient-to-tr from-brand-gold via-brand-cream to-brand-royal blur-3xl animate-blob"
            />
            </div>
            <div
            aria-hidden="true"
            class="pointer-events-none absolute left-10 top-16 -z-10 h-48 w-48 rounded-full bg-brand-gold/25 blur-3xl"
            />
            <div
            aria-hidden="true"
            class="pointer-events-none absolute right-14 top-6 -z-10 h-52 w-52 rounded-full bg-gradient-to-br from-brand-royal/45 via-brand-cream/25 to-transparent blur-3xl"
            />
            <div
            aria-hidden="true"
            class="pointer-events-none absolute inset-x-12 bottom-4 -z-10 h-20 rounded-full bg-gradient-to-r from-brand-royal/20 via-transparent to-brand-gold/18 blur-3xl"
            />

            <div
            class="mx-auto flex max-w-content flex-col gap-12 px-4 lg:grid lg:grid-cols-[minmax(0,1.7fr)_minmax(0,1.3fr)] lg:items-center"
            >
            <!-- Columna izquierda: texto -->
            <div class="space-y-6">
                <div class="inline-flex items-center gap-2 rounded-full border border-brand-royal/40 bg-brand-navy/80 px-3 py-1 text-[0.7rem] text-slate-200">
                <span class="inline-block h-2 w-2 rounded-full bg-brand-gold" />
                <span>Disponible para proyectos web seleccionados</span>
                </div>

                <div class="space-y-3">
                <p class="text-xs font-semibold uppercase tracking-[0.25em] text-slate-300">
                    {t(lang, 'hero_kicker')}
                </p>
                <h1
                    class="text-3xl font-semibold leading-tight tracking-tight sm:text-4xl lg:text-[2.6rem]"
                >
                    {t(lang, 'hero_title')}
                </h1>
                <p class="max-w-xl text-sm text-slate-200">
                    {t(lang, 'hero_subtitle')}
                </p>
                </div>

                <div class="flex flex-wrap items-center gap-3">
                <a
                    href="#projects"
                    class="group relative inline-flex items-center justify-center overflow-hidden rounded-full bg-gradient-to-r from-brand-gold via-amber-200 to-brand-cream px-5 py-2 text-sm font-semibold text-brand-ink shadow-glow transition focus:outline-none focus:ring-2 focus:ring-brand-gold/70 focus:ring-offset-1 focus:ring-offset-brand-ink"
                >
                    <span
                    aria-hidden="true"
                    class="absolute inset-0 bg-[radial-gradient(circle_at_20%_20%,rgba(255,255,255,0.35),transparent_40%),radial-gradient(circle_at_80%_0,rgba(255,255,255,0.25),transparent_32%)] opacity-0 transition duration-500 group-hover:opacity-80 group-hover:blur-sm"
                    />
                    <span class="relative flex items-center gap-2">
                    <span class="h-2 w-2 rounded-full bg-slate-950/60" />
                    {t(lang, 'hero_primary')}
                    </span>
                </a>
                <a
                    href="#contact"
                    class="group relative inline-flex items-center justify-center overflow-hidden rounded-full border border-brand-royal/50 px-5 py-2 text-sm font-medium text-slate-100 transition hover:border-brand-gold/70 hover:text-white focus:outline-none focus:ring-2 focus:ring-brand-gold/60 focus:ring-offset-1 focus:ring-offset-brand-ink"
                >
                    <span
                    aria-hidden="true"
                    class="absolute inset-0 bg-gradient-to-r from-white/5 via-transparent to-white/5 opacity-0 transition duration-500 group-hover:opacity-100 group-hover:translate-x-2"
                    />
                    <span class="relative flex items-center gap-2">
                    <span class="h-1.5 w-1.5 rounded-full bg-slate-300/50" />
                    {t(lang, 'hero_secondary')}
                    </span>
                </a>
                </div>

                <!-- Mini “features” tipo template -->
                <div class="grid gap-3 text-xs text-slate-300 sm:grid-cols-3">
                <div class="flex flex-col gap-1 rounded-2xl border border-brand-royal/40 bg-brand-navy/80 p-3 shadow-soft transition hover:-translate-y-1 hover:border-brand-gold/60">
                    <span class="text-[0.65rem] uppercase tracking-[0.16em] text-slate-300">
                    Performance
                    </span>
                    <span class="font-medium">
                    Webs rápidas, sin cargas innecesarias.
                    </span>
                </div>
                <div class="flex flex-col gap-1 rounded-2xl border border-brand-royal/40 bg-brand-navy/80 p-3 shadow-soft transition hover:-translate-y-1 hover:border-brand-gold/60">
                    <span class="text-[0.65rem] uppercase tracking-[0.16em] text-slate-300">
                    Mantenimiento
                    </span>
                    <span class="font-medium">
                    Código limpio y fácil de extender.
                    </span>
                </div>
                <div class="flex flex-col gap-1 rounded-2xl border border-brand-royal/40 bg-brand-navy/80 p-3 shadow-soft transition hover:-translate-y-1 hover:border-brand-gold/60">
                    <span class="text-[0.65rem] uppercase tracking-[0.16em] text-slate-300">
                    Enfoque
                    </span>
                    <span class="font-medium">
                    Pocos proyectos, bien hechos.
                    </span>
                </div>
                </div>
            </div>

            <!-- Columna derecha: “preview” estilo template -->
            <div class="relative">
                <div
                class="relative overflow-hidden rounded-3xl border border-slate-700/60 bg-slate-900/90 p-4 shadow-glow backdrop-blur"
                >
                <div
                    aria-hidden="true"
                    class="pointer-events-none absolute -inset-16 -z-10 bg-[conic-gradient(at_top_right,_rgba(214,178,94,0.28),rgba(160,160,160,0.18),rgba(255,255,255,0.12),rgba(214,178,94,0.28))] opacity-40 blur-3xl"
                />
                <div class="pointer-events-none absolute inset-x-4 top-4 h-px bg-gradient-to-r from-transparent via-white/15 to-transparent" />
                <!-- pestañas code/preview estilo template -->
                <div class="mb-4 flex items-center justify-between gap-2 text-[0.7rem]">
                    <div class="inline-flex items-center gap-1 rounded-full bg-brand-navy/90 p-1">
                    <button
                        class="rounded-full bg-brand-ink px-3 py-1 font-medium text-slate-100"
                    >
                        Code
                    </button>
                    <button class="px-3 py-1 text-slate-400">
                        Preview
                    </button>
                    </div>
                    <span class="text-slate-300">Astro · Tailwind · TypeScript</span>
                </div>

                <!-- ventana “código / preview” -->
                <div
                    class="relative overflow-hidden rounded-2xl border border-brand-royal/40 bg-gradient-to-tr from-brand-navy via-brand-ink to-brand-ink"
                >
                    <div class="flex items-center gap-1 border-b border-brand-royal/40 px-3 py-2">
                    <span class="h-2 w-2 rounded-full bg-red-500" />
                    <span class="h-2 w-2 rounded-full bg-amber-400" />
                    <span class="h-2 w-2 rounded-full bg-brand-gold" />
                    <span class="ml-2 text-[0.7rem] text-slate-400">
                        portfolio-samuel-galpe.astro
                    </span>
                    </div>

                    <div class="space-y-1 p-4 text-[0.7rem] font-mono leading-relaxed">
                    <p class="text-slate-500">
                        <span class="text-brand-gold">const</span> developer{' '}
                        <span class="text-slate-300">=</span> {'{'}
                    </p>
                    <p class="pl-4 text-slate-300">
                        name: <span class="text-amber-200">'Samuel Galpe'</span>,
                    </p>
                    <p class="pl-4 text-slate-300">
                        role: <span class="text-amber-200">'Full-Stack Web Developer'</span>,
                    </p>
                    <p class="pl-4 text-slate-300">
                        stack: <span class="text-amber-200">['Astro','Tailwind','C#','.NET']</span>,
                    </p>
                    <p class="text-slate-500">{'}'};</p>
                    <p class="pt-2 text-slate-500">
                        // centrado en webs limpias, rápidas y mantenibles
                    </p>
                    </div>
                </div>

                <!-- barra inferior estilo KPIs -->
                <div class="mt-4 flex flex-wrap items-center gap-3 text-[0.7rem]">
                    <div class="flex items-center gap-2 rounded-full border border-brand-royal/40 bg-brand-navy px-3 py-1">
                    <span class="h-1.5 w-1.5 rounded-full bg-brand-gold" />
                    <span class="text-slate-200">Deploys con CI/CD básico</span>
                    </div>
                    <div class="flex items-center gap-2 rounded-full border border-brand-royal/40 bg-brand-navy px-3 py-1">
                    <span class="text-slate-300">+X</span>
                    <span class="text-slate-200">proyectos productivos</span>
                    </div>
                </div>
            </div>

            <!-- tarjetas flotantes estilo template -->
            <div
                class="pointer-events-none absolute -left-5 -bottom-5 hidden w-40 rounded-2xl border border-brand-royal/45 bg-brand-navy/95 p-3 text-[0.7rem] text-slate-200 shadow-soft md:block animate-float [animation-delay:0.6s]"
                >
                <div class="mb-1 text-[0.65rem] uppercase tracking-[0.16em] text-slate-300">
                    Tiempo de respuesta
                </div>
                <div class="flex items-baseline gap-1">
                    <span class="text-lg font-semibold text-brand-gold">24h</span>
                    <span class="text-[0.65rem] text-slate-400">media</span>
                </div>
            </div>
            <div
                class="pointer-events-none absolute -right-6 -top-6 hidden w-40 rounded-2xl border border-brand-royal/45 bg-brand-navy/95 p-3 text-[0.7rem] text-slate-200 shadow-soft md:block animate-float"
                >
                <div class="mb-1 text-[0.65rem] uppercase tracking-[0.16em] text-slate-300">
                    Tipo de proyectos
                </div>
                <ul class="space-y-0.5">
                    <li>· Landing pages</li>
                    <li>· Webs corporativas</li>
                    <li>· Portfolios dev</li>
                </ul>
                </div>
            </div>
            </div>
        </section>

        <!-- PROYECTOS estilo cards -->
        <ProjectsGrid lang={lang} />

        <!-- SOBRE MÍ -->
        <section id="about" class="relative bg-brand-ink py-16">
            <div
            aria-hidden="true"
            class="pointer-events-none absolute inset-x-0 top-6 h-32 bg-gradient-to-b from-brand-royal/15 via-transparent to-transparent"
            />
            <div
            class="relative mx-auto grid max-w-content gap-10 px-4 lg:grid-cols-[minmax(0,1.7fr)_minmax(0,1.3fr)]"
            >
            <div class="space-y-4">
                <h2 class="text-2xl font-semibold tracking-tight">
                {t(lang, 'section_about_title')}
                </h2>
                <p class="text-sm text-slate-200">
                {t(lang, 'section_about_p1')}
                </p>
                <p class="text-sm text-slate-200">
                {t(lang, 'section_about_p2')}
                </p>
            </div>

            <!-- Principios destacados -->
            <div class="grid gap-3 text-xs sm:grid-cols-2">
                {principles.map((principle) => (
                <div
                    class="group relative flex items-center gap-3 overflow-hidden rounded-full border border-brand-royal/45 bg-gradient-to-r from-brand-navy/90 via-brand-ink to-brand-navy/90 px-3 py-3 shadow-soft ring-1 ring-white/5 transition hover:-translate-y-0.5 hover:border-brand-gold/60"
                >
                    <div class="relative flex h-10 w-10 items-center justify-center rounded-full bg-gradient-to-br from-amber-200/80 via-brand-gold/70 to-brand-cream/70 text-brand-ink shadow-glow">
                    <span class="absolute inset-0 rounded-full bg-white/30 opacity-0 transition group-hover:opacity-30" />
                    {principle.icon && principleIcons[principle.icon]}
                    </div>
                    <div class="flex flex-col leading-tight">
                    <span class="text-sm font-semibold text-slate-50">{principle.title}</span>
                    <span class="text-[0.7rem] text-slate-300">{principle.subtitle}</span>
                    </div>
                </div>
                ))}
            </div>
            </div>
        </section>

        <!-- STACK estilo tarjetas -->
        <section id="stack" class="relative bg-brand-ink py-16">
            <div
            aria-hidden="true"
            class="pointer-events-none absolute inset-x-0 top-0 h-10 bg-gradient-to-b from-brand-royal/18 via-transparent to-transparent"
            />
            <div class="relative mx-auto max-w-content px-4">
            <div class="mb-8 space-y-2">
                <h2 class="text-2xl font-semibold tracking-tight">
                {t(lang, 'section_stack_title')}
                </h2>
                <p class="text-sm text-slate-300">
                {t(lang, 'section_stack_subtitle')}
                </p>
            </div>

            <div class="grid gap-4 lg:grid-cols-3">
                <div class="rounded-3xl border border-brand-royal/35 bg-brand-navy/85 p-4 text-xs shadow-soft transition hover:-translate-y-1 hover:border-brand-gold/60 hover:shadow-glow">
                <div class="mb-2 text-[0.7rem] font-semibold uppercase tracking-[0.16em] text-slate-300">
                    {t(lang, 'stack_frontend_title')}
                </div>
                <ul class="space-y-1 text-slate-200">
                    {t(lang, 'stack_frontend_items').split(';').map((item) => (
                    <li>· {item}</li>
                    ))}
                </ul>
                </div>
                <div class="rounded-3xl border border-brand-royal/35 bg-brand-navy/85 p-4 text-xs shadow-soft transition hover:-translate-y-1 hover:border-brand-gold/60 hover:shadow-glow">
                <div class="mb-2 text-[0.7rem] font-semibold uppercase tracking-[0.16em] text-slate-300">
                    {t(lang, 'stack_backend_title')}
                </div>
                <ul class="space-y-1 text-slate-200">
                    {t(lang, 'stack_backend_items').split(';').map((item) => (
                    <li>· {item}</li>
                    ))}
                </ul>
                </div>
                <div class="rounded-3xl border border-brand-royal/35 bg-brand-navy/85 p-4 text-xs shadow-soft transition hover:-translate-y-1 hover:border-brand-gold/60 hover:shadow-glow">
                <div class="mb-2 text-[0.7rem] font-semibold uppercase tracking-[0.16em] text-slate-300">
                    {t(lang, 'stack_infra_title')}
                </div>
                <ul class="space-y-1 text-slate-200">
                    {t(lang, 'stack_infra_items').split(';').map((item) => (
                    <li>· {item}</li>
                    ))}
                </ul>
                </div>
            </div>
            </div>
        </section>

        <!-- CONTACTO estilo sección final del template -->
        <section
            id="contact"
            class="relative bg-gradient-to-t from-brand-ink via-brand-ink to-[#111218] py-16"
        >
            <div
            aria-hidden="true"
            class="pointer-events-none absolute inset-0 bg-[radial-gradient(circle_at_18%_18%,rgba(214,178,94,0.16),transparent_32%),radial-gradient(circle_at_78%_12%,rgba(50,50,50,0.24),transparent_32%)]"
            />
            <div
            class="relative mx-auto grid max-w-content gap-10 px-4 lg:grid-cols-[minmax(0,1.5fr)_minmax(0,1.2fr)]"
            >
            <div class="space-y-4">
                <h2 class="text-2xl font-semibold tracking-tight">
                {t(lang, 'section_contact_title')}
                </h2>
                <p class="text-sm text-slate-200">
                {t(lang, 'section_contact_subtitle')}
                </p>
                <p class="text-sm text-slate-200">
                {t(lang, 'section_contact_intro1')}
                </p>
                <p class="text-sm text-slate-200">
                {t(lang, 'section_contact_intro2')}
                </p>
                <ul class="list-disc space-y-1 pl-4 text-xs text-slate-200">
                <li>{t(lang, 'section_contact_item1')}</li>
                <li>{t(lang, 'section_contact_item2')}</li>
                <li>{t(lang, 'section_contact_item3')}</li>
                </ul>
            </div>

            <form
                class="relative space-y-3 overflow-hidden rounded-3xl border border-brand-royal/40 bg-brand-navy/90 p-5 text-xs shadow-glow backdrop-blur"
                action="mailto:TU_EMAIL_AQUI"
                method="post"
                enctype="text/plain"
            >
                <div class="pointer-events-none absolute -inset-10 bg-[radial-gradient(circle_at_30%_10%,rgba(214,178,94,0.22),transparent_35%),radial-gradient(circle_at_80%_80%,rgba(48,48,48,0.2),transparent_32%)] opacity-80" />
                <div class="pointer-events-none absolute inset-0 bg-[linear-gradient(to_bottom_right,rgba(255,255,255,0.05),transparent)]" />
                <div class="flex flex-col gap-1">
                <label class="text-slate-200" for="name">
                    {t(lang, 'contact_name_label')}
                </label>
                <input
                    id="name"
                    name="name"
                    type="text"
                    required
                    class="rounded-xl border border-brand-royal/40 bg-brand-ink px-3 py-2 text-xs text-slate-100 outline-none transition focus:border-brand-gold/60 focus:ring-2 focus:ring-brand-gold/50"
                />
                </div>
                <div class="flex flex-col gap-1">
                <label class="text-slate-200" for="email">
                    {t(lang, 'contact_email_label')}
                </label>
                <input
                    id="email"
                    name="email"
                    type="email"
                    required
